<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edt_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/white_common_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_auth_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:background">@drawable/btn_blue_green_round_sel</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">44px</item>
    </style>

    <style name="edt_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/gray_hint</item>
    </style>

</resources>
