<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edt_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/white_common_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_auth_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:background">@drawable/btn_blue_green_round_sel</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">44px</item>
    </style>

    <style name="edt_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/gray_hint</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_common</item>
    </style>

    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="main_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_common</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray_text_55</item>
    </style>

    <style name="common_icon_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:drawableRight">@drawable/ic_right_arrow</item>
        <item name="android:background">@drawable/btn_white_sel</item>
        <item name="android:textColor">@color/black_common</item>
        <item name="android:textSize">@dimen/text_def_size</item>
    </style>

    <style name="common_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_common</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_def_size</item>
    </style>

    <style name="def_text_small_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/def_text_size_small</item>
    </style>

</resources>
