<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dip"
    >

    <TextView
        android:id="@+id/tv_third_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_by_third_platform"
        android:textColor="@color/gray_hint"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="12dp"
        android:background="@color/gray_hint"
        app:layout_constraintBottom_toBottomOf="@+id/tv_third_account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_third_account"
        app:layout_constraintTop_toTopOf="@+id/tv_third_account"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="12dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="60dp"
        android:background="@color/gray_hint"
        app:layout_constraintBottom_toBottomOf="@+id/tv_third_account"
        app:layout_constraintLeft_toRightOf="@+id/tv_third_account"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_third_account"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="60dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_third_account"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_login_weixin"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_login_qq"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_login_weibo"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
