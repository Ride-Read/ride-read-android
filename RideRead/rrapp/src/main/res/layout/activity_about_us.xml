<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_bg"
              android:orientation="vertical">

    <include
        layout="@layout/include_simple_topbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_normal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="60dp"
        android:paddingTop="30dp"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_avatar"
            android:layout_width="84dip"
            android:layout_height="84dip"
            fresco:placeholderImage="@drawable/ic_logo_big"
            />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="版本V1.0.0"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/def_text_size"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_version_update"
        style="@style/common_icon_item_style"
        android:layout_marginTop="8dp"
        android:text="版本更新"/>

    <TextView
        android:id="@+id/tv_contact_us"
        style="@style/common_icon_item_style"
        android:layout_marginTop="0.5dp"
        android:text="联系骑阅"/>

    <TextView
        android:id="@+id/tv_protocol"
        style="@style/common_icon_item_style"
        android:layout_marginTop="0.5dp"
        android:text="用户协议"/>

    <TextView
        android:id="@+id/tv_share"
        style="@style/common_icon_item_style"
        android:layout_marginTop="0.5dp"
        android:text="分享给好友"/>

</LinearLayout>