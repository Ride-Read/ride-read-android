<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_bg"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/green_common"
        android:gravity="center"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="@dimen/text_def_size"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_map_bg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <View
                    android:id="@+id/v_bottom"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    app:layout_constraintTop_toBottomOf="@id/img_map_bg"></View>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/v_bottom"
                    app:layout_constraintLeft_toLeftOf="@id/v_bottom"
                    fresco:placeholderImage="@drawable/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_sex_female"
                    android:textSize="@dimen/text_def_size"
                    app:layout_constraintLeft_toRightOf="@id/img_avatar"
                    app:layout_constraintTop_toTopOf="@id/img_avatar"
                    tools:text="林志玲"/>

                <TextView
                    android:id="@+id/tv_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="12dp"
                    android:drawablePadding="8dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_avatar"
                    app:layout_constraintLeft_toRightOf="@id/img_avatar"
                    tools:text="生活就像海洋"/>

                <TextView
                    android:id="@+id/btn_personality_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_green_common_corners_sel"
                    android:paddingBottom="4dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_def_size"
                    app:layout_constraintBottom_toBottomOf="@id/img_map_bg"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="个性地图"/>


            </android.support.constraint.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="消息 10"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="24dp"
                    android:background="@color/gray_hint"/>

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="关注 100"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="24dp"
                    android:background="@color/gray_hint"/>

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="阅粉 1500"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_post_date"
                style="@style/common_icon_item_style"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_me_send"
                android:text="发个阅约"/>

            <TextView
                android:id="@+id/btn_my_circle"
                style="@style/common_icon_item_style"
                android:layout_marginTop="0.5dp"
                android:drawableLeft="@drawable/ic_me_mycircle"
                android:text="我的阅圈"/>

            <TextView
                android:id="@+id/btn_my_collect"
                style="@style/common_icon_item_style"
                android:layout_marginTop="0.5dp"
                android:drawableLeft="@drawable/ic_me_collect"
                android:text="我的收藏"/>

            <TextView
                android:id="@+id/btn_invite_friend"
                style="@style/common_icon_item_style"
                android:layout_marginTop="0.5dp"
                android:drawableLeft="@drawable/ic_me_request"
                android:text="邀请好友"/>

            <TextView
                android:id="@+id/btn_setting"
                style="@style/common_icon_item_style"
                android:layout_marginTop="0.5dp"
                android:drawableLeft="@drawable/ic_me_set"
                android:text="设置"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>