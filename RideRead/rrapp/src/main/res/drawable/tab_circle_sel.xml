<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 失去焦点 -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/icon_timeline" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/icon_timeline_pressed" />
    <!-- 获得焦点 -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/icon_timeline_pressed" />
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/icon_timeline_pressed" />
    <!-- 按下 -->
    <item android:state_selected="true" android:state_pressed="true" android:drawable="@drawable/icon_timeline_pressed" />
    <item android:state_pressed="true" android:drawable="@drawable/icon_timeline_pressed" />

</selector>