<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/mine_editmsg_tv_sex_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="性别"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/login_textcolor_gray"
        />

    <RadioGroup
        android:id="@+id/mine_editmsg_sex_radiogroup"
        android:contentDescription="性别"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mine_editmsg_sex_radiomale"
            android:background="@drawable/selector_btn_style"
            android:layout_marginBottom="10dip"
            android:text="男"
            android:checked="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/login_textcolor_gray"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mine_editmsg_sex_radiofemale"
            android:background="@drawable/selector_btn_style"
            android:layout_marginTop="10dip"
            android:text="女"/>
    </RadioGroup>

</LinearLayout>