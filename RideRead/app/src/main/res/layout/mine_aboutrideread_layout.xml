<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rideread.rideread.widget.MainToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dip"
        android:background="@android:color/white"
        android:minHeight="?attr/actionBarSize"
        app:isShowLeftIcon="true"
        app:isShowRightIcon="false"
        app:LeftIcon="@mipmap/left_arrow"
        app:title="关于骑阅"
        >

    </com.rideread.rideread.widget.MainToolBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/mine_aboutrideread_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:layout_centerHorizontal="true"
            android:maxHeight="128dip"
            android:maxWidth="128dip"
            android:minHeight="96dip"
            android:minWidth="96dip"
            android:src="@mipmap/me"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_aboutrideread_iv_logo"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:textSize="20sp"
            android:text="当前版本 1.0"/>

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/login_textcolor_gray"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">
        <TableRow
            android:minHeight="48dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="版本更新"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/mine_setting_rightarrow_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="36dip"
                    android:maxWidth="36dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>

            </RelativeLayout>

        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/login_textcolor_gray"/>

        <TableRow
            android:minHeight="48dip"
            android:clickable="true"
            android:onClick="onContactRideRead">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="联系骑阅"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/mine_setting_rightarrow_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="36dip"
                    android:maxWidth="36dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>

            </RelativeLayout>

        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/login_textcolor_gray"/>

        <TableRow
            android:minHeight="48dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:clickable="true"
                android:onClick="onReadContract"
                android:textColor="@android:color/black"
                android:text="用户协议"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:paddingTop="8dip"
                android:clickable="true"
                android:onClick="onReadContract"
                android:paddingBottom="8dip"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/mine_setting_rightarrow_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="36dip"
                    android:maxWidth="36dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>

            </RelativeLayout>

        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/login_textcolor_gray"/>

        <TableRow
            android:minHeight="48dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="分享给好友"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/mine_setting_rightarrow_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="36dip"
                    android:maxWidth="36dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>

            </RelativeLayout>

        </TableRow>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/login_textcolor_gray"/>
    </TableLayout>


</LinearLayout>