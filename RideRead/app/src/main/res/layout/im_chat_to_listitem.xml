<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dip"
    android:paddingRight="6dip">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/im_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"

            android:textColor="#FFFFFF"
            android:textSize="12.0sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/im_chat_portait"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:src="@mipmap/me"/>
            <TextView
                android:id="@+id/im_chat_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="36dip"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/common_black"
                android:maxWidth="220dp"
                android:textSize="14sp"
                android:layout_marginLeft="5dip"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:text="在不后悔彼此间的巴萨和健康吃都不会接在不后悔彼此间的巴萨和健康吃都不会接在不后悔彼此间的巴萨和健康吃都不会接 "
                android:background="@drawable/timeline_newmsg_bg"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>