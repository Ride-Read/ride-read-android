<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dip"
    android:paddingRight="15dip"
    android:paddingLeft="15dip"
    android:paddingTop="20dip"
    android:paddingBottom="20dip"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/timeline_head"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:src="@mipmap/me"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            >

            <TextView
                android:id="@+id/timeline_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/common_black"
                android:text="张晓明"
                android:textSize="16sp"/>
            <Button
                android:layout_width="65dip"
                android:layout_height="30dip"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:text="关注"
                android:background="@drawable/login_btn_style_selector"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/timeline_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_black"
            android:visibility="gone"
            android:layout_marginLeft="5dip"
            android:textSize="16sp"
            android:text="风景很美"
            />

        <com.jaeger.ninegridimageview.NineGridImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/timeline_imgs"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="10dip"
            android:layout_width="match_parent"
            app:imgGap="4dp"
            app:showStyle="fill"
            android:visibility="gone"
            app:singleImgSize="120dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="#212121">
            <com.rideread.rideread.widget.VideoTextureView
                android:id="@+id/timeline_videotextureview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dip"
                android:visibility="gone"
                >

            </com.rideread.rideread.widget.VideoTextureView>
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:src="@mipmap/icon_play"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/timeline_destinnation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_textcolor_gray"
                android:textSize="16sp"
                android:text="广州.白云山"/>
            <TextView
                android:id="@+id/timeline_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textColor="@color/login_textcolor_gray"
                android:textSize="16sp"
                android:text="距离我2km"/>
        </LinearLayout>

        <TextView
            android:id="@+id/timeline_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_textcolor_gray"
            android:layout_marginLeft="5dip"
            android:textSize="16sp"
            android:text="6分钟前"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dip"
            android:gravity="right">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/like"
                    android:layout_marginRight="5dip"/>
                <TextView
                    android:id="@+id/timeline_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_black"
                    android:textSize="16sp"
                    android:layout_marginRight="25dip"
                    android:text="20"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/commenting"
                android:layout_marginRight="5dip"/>
            <TextView
                android:id="@+id/timeline_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_black"
                android:textSize="16sp"
                android:text="6"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>